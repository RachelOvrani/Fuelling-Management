<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    mc:Ignorable="d">



    <Style x:Key="BaseFloatingActionButtonStyle" TargetType="{x:Type ButtonBase}"
           x:Shared="False"
           BasedOn="{StaticResource MaterialDesignFloatingActionButton}">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="10"/>
    </Style>



    <Style x:Key="AddButtonStyle" TargetType="{x:Type ButtonBase}" 
           x:Shared="False"
           BasedOn="{StaticResource BaseFloatingActionButtonStyle}">
        <Setter Property="ToolTip" Value="הוספה"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="Plus"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="RemoveButtonStyle" TargetType="{x:Type ButtonBase}" 
           x:Shared="False"
           BasedOn="{StaticResource BaseFloatingActionButtonStyle}">
        <Setter Property="ToolTip" Value="מחיקה"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="Delete"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="UpdateButtonStyle" TargetType="{x:Type ButtonBase}" 
           x:Shared="False"
           BasedOn="{StaticResource BaseFloatingActionButtonStyle}">
        <Setter Property="ToolTip" Value="עריכה"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="Pencil"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="SettingsButtonStyle" TargetType="{x:Type ButtonBase}" 
           x:Shared="False"
           BasedOn="{StaticResource BaseFloatingActionButtonStyle}">
        <Setter Property="ToolTip" Value="הגדרות"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="Settings" 
                                         Height="25" Width="25"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="SaveButtonStyle" TargetType="{x:Type ButtonBase}" 
           x:Shared="False"
           BasedOn="{StaticResource BaseFloatingActionButtonStyle}">
        <Setter Property="ToolTip" Value="שמירה"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Content">
            <Setter.Value>
                <Image Source="Images/floppyDisk.png" Width="20"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="CancelButtonStyle" TargetType="{x:Type ButtonBase}" 
           x:Shared="False"
           BasedOn="{StaticResource BaseFloatingActionButtonStyle}">
        <Setter Property="ToolTip" Value="ביטול"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="WindowClose"
                                         Height="23" Width="23"/>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="AddCotactPersonButtonStyle" TargetType="{x:Type ButtonBase}"
           x:Shared="False"
           BasedOn="{StaticResource BaseFloatingActionButtonStyle}">
        <Setter Property="ToolTip" Value="הוסף איש קשר"/>
        <Setter Property="Width" Value="35"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="AccountPlus"
                                         Height="18" Width="16"/>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="EditCotactPersonButtonStyle" TargetType="{x:Type ButtonBase}" 
           x:Shared="False"
           BasedOn="{StaticResource BaseFloatingActionButtonStyle}">
        <Setter Property="ToolTip" Value="עדכן איש קשר"/>
        <Setter Property="Width" Value="35"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="AccountEdit"
                                         Height="18" Width="16"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CancelCotactPersonButtonStyle" TargetType="{x:Type ButtonBase}" 
           x:Shared="False"
           BasedOn="{StaticResource BaseFloatingActionButtonStyle}">
        <Setter Property="ToolTip" Value="ביטול"/>
        <Setter Property="Width" Value="35"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="CloseThick"
                                         Height="18" Width="16"/>
            </Setter.Value>
        </Setter>
    </Style>



    <Style x:Key="AddCotactPersonsButtonStyle" TargetType="{x:Type ButtonBase}" 
           x:Shared="False"
           BasedOn="{StaticResource BaseFloatingActionButtonStyle}">
        <Setter Property="ToolTip" Value="הוספת אנשי קשר"/>
        <Setter Property="Width" Value="35"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="AccountMultiplePlus"
                                         Height="18" Width="16"/>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="AddPictureButtonStyle" TargetType="{x:Type ButtonBase}" 
           x:Shared="False"
           BasedOn="{StaticResource BaseFloatingActionButtonStyle}">
        <Setter Property="ToolTip" Value="הוסף תמונה"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="AttachmentPlus"
                                         Height="18" Width="16"/>
            </Setter.Value>
        </Setter>
    </Style>



    <Style x:Key="ClearFilterButtonStyle" TargetType="{x:Type ButtonBase}" 
           x:Shared="False"
           BasedOn="{StaticResource MaterialDesignOutlinedButton}">
        <Setter Property="ToolTip" Value="ניקוי סינון"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="20,0"/>
        <Setter Property="Content">
            <Setter.Value>
                <Image Width="20" Margin="-5" Source="Images/clearFilter.png"/>
            </Setter.Value>
        </Setter>
    </Style>



    <Style x:Key="BackButtonStyle" TargetType="{x:Type ButtonBase}" 
           x:Shared="False"
           BasedOn="{StaticResource MaterialDesignPaperDarkButton}">
        <Setter Property="Height" Value="25"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="20,10"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="ArrowLeft" />
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="RefreshButtonStyle" TargetType="{x:Type ButtonBase}" 
           x:Shared="False"
           BasedOn="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
        <Setter Property="ToolTip" Value="רענון"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="20,10"/>
        <Setter Property="Foreground" Value="Black"/>

        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="Refresh"  Height="30" Width="30"/>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>